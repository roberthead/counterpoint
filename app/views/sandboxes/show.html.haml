.sandbox
  = render partial: 'partials/composition', locals: { composition: @sandbox.composition }
  .page__flex-content-container
    .page__flex-content
      = render partial: 'partials/score', locals: { sandbox: @sandbox }
    .page__flex-content
      = render partial: 'partials/annotations', locals: { annotations: @sandbox.composition.cantus_firmus_issues, header: 'Cantus Firmus', fitness: @sandbox.composition.cantus_firmus_fitness_percentage }
      = render partial: 'partials/annotations', locals: { annotations: @sandbox.composition.first_species_counterpoint_issues, header: 'First Species Counterpoint', fitness: @sandbox.composition.first_species_counterpoint_fitness_percentage }
